{
    "compilerOptions": {
      "target": "es2016", 
      "module": "commonjs", 
      "lib": [
        "DOM",
        "ESNext"
      ],
      "jsx": "preserve", 
      "strict": true,
      "baseUrl": "./",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "noEmit": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  